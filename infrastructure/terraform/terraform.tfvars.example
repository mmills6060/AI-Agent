# =============================================================================
# AI-Agent Terraform Variables Example
# Copy this file to terraform.tfvars and fill in your values
# =============================================================================

# -----------------------------------------------------------------------------
# General Configuration
# -----------------------------------------------------------------------------

project_name = "ai-agent"
environment  = "dev"  # Options: dev, staging, production
aws_region   = "us-east-1"

# -----------------------------------------------------------------------------
# Networking
# -----------------------------------------------------------------------------

vpc_cidr             = "10.0.0.0/16"
public_subnet_cidrs  = ["10.0.1.0/24", "10.0.2.0/24"]
private_subnet_cidrs = ["10.0.10.0/24", "10.0.11.0/24"]

# Enable NAT Gateway for private subnets (recommended for production)
# Note: NAT Gateways incur additional costs (~$32/month per NAT)
enable_nat_gateway = false

# -----------------------------------------------------------------------------
# Frontend Container Configuration
# -----------------------------------------------------------------------------

frontend_container_port = 3000
frontend_cpu            = 256   # 0.25 vCPU
frontend_memory         = 512   # 512 MB
frontend_desired_count  = 1
frontend_max_count      = 4
frontend_image_tag      = "latest"

# -----------------------------------------------------------------------------
# Backend Container Configuration
# -----------------------------------------------------------------------------

backend_container_port = 8000
backend_cpu            = 512    # 0.5 vCPU
backend_memory         = 1024   # 1 GB
backend_desired_count  = 1
backend_max_count      = 4
backend_image_tag      = "latest"

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------

mongodb_database = "multi_agent_db"

# -----------------------------------------------------------------------------
# Secrets (AWS Secrets Manager ARNs)
# Create secrets in AWS Secrets Manager first, then add ARNs here
# 
# Example commands to create secrets:
#   aws secretsmanager create-secret --name ai-agent/openai-api-key --secret-string "sk-..."
#   aws secretsmanager create-secret --name ai-agent/tavily-api-key --secret-string "tvly-..."
#   aws secretsmanager create-secret --name ai-agent/mongodb-uri --secret-string "mongodb+srv://..."
# -----------------------------------------------------------------------------

openai_api_key_secret_arn = "arn:aws:secretsmanager:us-east-1:YOUR_ACCOUNT_ID:secret:ai-agent/openai-api-key-XXXXXX"
tavily_api_key_secret_arn = "arn:aws:secretsmanager:us-east-1:YOUR_ACCOUNT_ID:secret:ai-agent/tavily-api-key-XXXXXX"
mongodb_uri_secret_arn    = "arn:aws:secretsmanager:us-east-1:YOUR_ACCOUNT_ID:secret:ai-agent/mongodb-uri-XXXXXX"

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------

# Enable CloudWatch Container Insights (additional cost)
enable_container_insights = false

# Enable auto-scaling based on CPU utilization
enable_autoscaling = false

# Use Fargate Spot instances for cost savings (up to 70% cheaper)
# Warning: Spot instances may be interrupted with 2-minute notice
use_fargate_spot = false

# CloudWatch log retention (days)
log_retention_days = 14

